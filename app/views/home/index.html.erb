<h1>게시판</h1>
<p>Find me in app/views/home/index.html.erb</p>
        <div class="container jumbotron">
        <form action='/home' method ='post' >
          <div class="form-group">
            <label for="exampleInputEmail1">제목</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="title" placeholder="제목입니다">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">내용</label>
            <textarea row= "5" class="form-control" name="content" id="exampleInputPassword1" placeholder="내용을 적어주세요"></textarea>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        
        <div>
            <% @posts.each do |p| %>
              <%= p.post_title %><br>
              <%= p.post_content %><hr>
              
            <% end %>
        </div>
        
        </div>